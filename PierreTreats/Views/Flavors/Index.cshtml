@{
    Layout = "_Layout";
}

@using PierreTreats.Models

<h1>Flavors:</h1> 

@if (@Model.Count == 0)
{
    <h2>No Flavors have been added.</h2>
}
<ul>
@foreach (Flavor flavor in Model)
{
   <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li> 
}
</ul>
<p>@Html.ActionLink("Add a new flavor", "Create", "flavors")</p>
<p>@Html.ActionLink("Return home", "Index", "Home", null, new { @class = "btn btn-secondary"})</p>