 @{
    Layout = "_Layout";
}

@model PierreTreats.Models.Treat

<h1>Add a treat:</h1>
<h2>Add a flavor to this treat</h2>

<h2>@Html.DisplayFor(model => model.TreatName)</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    <h3>@Html.Label("Select Flavor")</h3>
    <h4>@Html.DropDownList("FlavorId")</h4>

    <input type="submit" value="save" class="btn btn-dark" />
}

<p>@Html.ActionLink("Back to List", "Index", "Treats")</p>
