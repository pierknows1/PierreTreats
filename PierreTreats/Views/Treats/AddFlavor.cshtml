@{
    Layout = "_Layout";
}

@model PierreTreats.Models.Treat

<h1>Add a treat:</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.TreatName)
        @Html.TextBoxFor(model => model.TreatName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TreatName, "", new { @class = "text-danger" })
    </div>

    //<input type="submit" value="Save" class="btn btn-dark" />
    <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Back to List", "Index", "Treats")</p>
