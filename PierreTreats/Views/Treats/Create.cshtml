@{
    Layout = "_Layout";
}

@model PierreTreats.Models.Treat

<h1>Add a treat:</h1>

<p>@Html.ValidationMessageFor(model => model.TreatId, "", new { @class = "text-danger", @style = "font-weight: 600;"})</p>
<p>@Html.ValidationMessageFor(model => model.TreatName, "", new { @class = "text-danger", @style = "font-weight: 600;"})</p>

@using (Html.BeginForm())
{

    <h3>@Html.LabelFor(model => model.TreatName)</h3>
    <h4>@Html.TextBoxFor(model => model.TreatName)</h4>

    <input type="submit" value="save"/>
}

<p>@Html.ActionLink("Back to List", "Index", "Treats")</p>
