@{
    Layout = "_Layout";
}

@using PierreTreats.Models
@model PierreTreats.Models.Treat

<h1>Add a treat:</h1>

            
<div class="container">
    @using (Html.BeginForm())
        {
            <label class="form-label">@Html.DisplayNameFor(model => model.TreatName)</label>
            @Html.TextBoxFor(model => model.TreatName, new { @class = "form-control"})
            <p class= "text-danger"> @Html.ValidationMessageFor(model => model.TreatName)</p>

    <button type="submit" class="btn btn-primary">Add a new Treat</button>

}
</div>

<p>@Html.ActionLink("Back to Treats", "Index", null, new { @class = "btn btn-secondary"})</p>