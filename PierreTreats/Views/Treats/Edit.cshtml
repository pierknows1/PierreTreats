@{
    Layout = "_Layout";
}


@model PierreTreats.Models.Treat


<h2>Edit:</h2>

<h3>Edit this Treat: @Html.DisplayFor(model => model.TreatName)</h3>

<div class="container">
@using (Html.BeginForm())
    {
        <div class="form-container">
            @Html.HiddenFor(model => model.TreatId)
            <div class="form-group">
                <label class="form-label">@Html.DisplayNameFor(model => model.TreatName)</label>
                @Html.EditorFor(model => model.TreatName, new { @class = "form-control"})
            <p class="text-danger">@Html.ValidationMessageFor(model => model.TreatName)</p>
        </div>
    </div>
        
        <button type="submit" class="btn btn-sucess">Save </button>

    }

    <p>@Html.ActionLink("Delete Treat", "New", new{ id = Model.TreatId}, new { @class = "btn btn-danger"})</p>
    <p>@Html.ActionLink("Back to All Treats", "Index", null, new { @class = "btn btn-secondary" })</p>